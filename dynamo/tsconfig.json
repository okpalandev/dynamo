{
  "include": [
    "./src/**/*.ts",
    "./spec/**/*.spec.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "references": [
    { "path": "./src" }
  ],
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./types",
    "removeComments": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "dynamo/cli": ["src/cli"],
      "dynamo/bundler": ["src/bundler"],
      "dynamo/config":["src/config"]
    }
  }
}
